<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net40</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyOriginatorKeyFile>..\..\key.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>true</SignAssembly>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <!--<RunCodeAnalysis>true</RunCodeAnalysis>-->
    <LangVersion>Latest</LangVersion>
    <NoWarn>NU5125</NoWarn>
  </PropertyGroup>
  
  <PropertyGroup Label="Package properties">
    <IncludeSymbols>true</IncludeSymbols>
    <Description>Managed Windows Imaging API (WIMGAPI)</Description>
    <Authors>jeffkl</Authors>
    <Copyright>Copyright © 2014. All rights reserved.</Copyright>
    <PackageLicenseUrl>https://github.com/jeffkl/ManagedWimgApi/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/jeffkl/ManagedWimgApi</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jeffkl/ManagedWimgApi.git</RepositoryUrl>
    <PackageTags>Wimgapi</PackageTags>
  </PropertyGroup>
</Project>